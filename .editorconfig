# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true



[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
quote_type = single
trim_trailing_whitespace = true
spaces_around_operators = true
insert_final_newline = true



[*.css]
indent_size = 2



[*.md]
trim_trailing_whitespace = false
